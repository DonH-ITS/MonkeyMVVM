<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MonkeyMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MonkeyMVVM"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Monkey" Icon="monkey.png">
            <ShellContent
        Title="MonkeyPage"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MonkeyPage" 
        />
        </Tab>
        <Tab Title="Dog" Icon="dog.png">
            <ShellContent
        Title="DogPage"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="DogPage" />
        </Tab>
        <Tab Title="Cat" Icon="cat.png">
            <ShellContent
                Title="CatPage"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="CatPage" 
                />      
        </Tab>
        <Tab Title="Bear" Icon="bear.png">
            <ShellContent
                Title="BearPage"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="BearPage" 
                />      
        </Tab>
    </TabBar>

</Shell>
